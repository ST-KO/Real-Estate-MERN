generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId // connect mongodb _id to model id with @map
  email     String   @unique
  username  String   @unique
  password  String
  avatar    String? // ? means empty and not required
  createdAt DateTime @default(now())
}
